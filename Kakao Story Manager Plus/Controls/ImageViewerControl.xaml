<UserControl
    x:Class="KSMP.Controls.ImageViewerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KSMP.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:fa5="using:FontAwesome5"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <FlipView x:Name="FvImages" Height="auto" Width="auto" Margin="30" SelectionChanged="FvImages_SelectionChanged">
            <FlipView.ItemTemplate>
                <DataTemplate>
                    <ScrollViewer ZoomMode="Enabled" Tapped="OnScrollViewerTapped" RightTapped="OnScrollViewerRightTapped">
                        <Image Source="{Binding origin_url}" Stretch="Uniform" Loaded="ImageLoaded"/>
                    </ScrollViewer>
                </DataTemplate>
            </FlipView.ItemTemplate>
        </FlipView>
        <Viewbox>
            <FontIcon FontSize="25" FontFamily="{StaticResource Fluent Icons}" Glyph="&#xe711;" Opacity="0.25" Margin="40" HorizontalAlignment="Right" VerticalAlignment="Top" PointerEntered="CloseButtonPointerEntered" PointerExited="CloseButtonPointerExited" Tapped="CloseButtonTapped"/>
        </Viewbox>
    </Grid>
</UserControl>
